{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "game",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "short_description": {
      "type": "richtext",
      "maxLength": 160,
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "release_date": {
      "type": "date"
    },
    "rating": {
      "type": "enumeration",
      "enum": [
        "BR0",
        "BR10",
        "BR12",
        "BR14",
        "BR16",
        "BR18"
      ]
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "gallery": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "collection": "category",
      "via": "games",
      "dominant": true
    },
    "developers": {
      "collection": "developer",
      "via": "games",
      "dominant": true
    },
    "platforms": {
      "collection": "platform",
      "via": "games",
      "dominant": true
    },
    "publisher": {
      "model": "publisher",
      "via": "games"
    }
  }
}
